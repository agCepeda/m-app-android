<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>
    </style>
    <style name="EditTextLine" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#A0A0A0</item>
        <item name="android:editTextColor">#fff</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditTextLineBlack" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="android:colorControlHighlight">#000</item>
        <item name="android:textColorHint">#222</item>
        <item name="android:editTextColor">#000</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditTextBorder" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#A0A0A0</item>
        <item name="android:editTextColor">#fff</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="SpinnerLine" parent="Widget.AppCompat.Spinner">
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#A0A0A0</item>
        <item name="android:editTextColor">#fff</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#f0f</item>
        <item name="colorControlActivated">#ff0</item>
    </style>
</resources>
