<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.meisshi.meisshi.ui.view.MeisshiCard
                android:id="@+id/meisshi_card"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imvProfile"
                    app:civ_border="false"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Name" />

                    <TextView
                        android:id="@+id/tvProfession"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profession" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnFollowed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="#fff"
                    android:textSize="8sp"
                    android:background="@android:color/transparent"/>
                <View
                    android:background="#fff"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/btnFollowers"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="8sp"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvBio"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnFacebook"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="8dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/facebook" />

                        <ImageButton
                            android:id="@+id/btnTwitter"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="8dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/twitter" />

                        <ImageButton
                            android:id="@+id/btnInstagram"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/instagram" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnTool"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        android:background="@drawable/profile_edit_background"
                        android:text="Edit" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <LinearLayout
                    android:id="@+id/viewPhone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tvIconPhone"
                        android:text="@string/fa_icon_mobile_phone"
                        android:textSize="25sp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/viewWebsite"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tvIconWebsite"
                        android:text="@string/fa_icon_globe"
                        android:textSize="25sp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/tvWebsite"
                        android:textColor="#fff"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/viewAddress"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tvIconAddress"
                        android:text="@string/fa_icon_marker"
                        android:textSize="25sp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_weight="1"

                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/viewEmail"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tvIconEmail"
                        android:text="@string/fa_icon_envelope"
                        android:textSize="25sp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnReview"
                android:text="@string/profile_add_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/lvReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>